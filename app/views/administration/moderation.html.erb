   </tr>
<% @liens.each do |lien| %>
    <tr>
      <td><img src="<%= lien.image_lien %>" alt="" width="102" height="100"></td>
      <td><%= lien.url_lien %></td>
      <td><%= lien.titre_lien %></td>
      <td><%= lien.prenom_auteur %> <%= lien.nom_auteur %></td>
      <td><%= lien.pseudo_auteur %></td>
      <td><%= lien.sum_lien_votes_positifs if params[:tri] == "vote" %></td>
      <td><%= link_to 'Supprimer', :controller => 'administration', :id => lien.lien_id, :action =>'destroy' %></td>
    </tr>

<% end %>
<tr><td colspan="8"><%= will_paginate @liens %></td></tr>
 </table>
